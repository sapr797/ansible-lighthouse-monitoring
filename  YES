–ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–æ–Ω–Ω—ã–π —Ñ–∞–π–ª Vector (/etc/vector/vector.yaml):

yaml
sources:
  lighthouse_logs:
    type: file
    include: ["/var/log/lighthouse/audit.log"]
    ignore_older_secs: 600
    read_from: "beginning"

sinks:
  clickhouse_sink:
    type: clickhouse
    inputs: ["lighthouse_logs"]
    endpoint: "http://127.0.0.1:8123"
    database: "lighthouse_metrics"
    table: "audits"
    skip_unknown_fields: true
    format: "json_each_row"
–°—Ç—Ä—É–∫—Ç—É—Ä–∞ —Ç–∞–±–ª–∏—Ü—ã ClickHouse
sql
-- –°–æ–∑–¥–∞–Ω–∏–µ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö –∏ —Ç–∞–±–ª–∏—Ü –¥–ª—è Lighthouse Monitoring System
CREATE DATABASE IF NOT EXISTS lighthouse_metrics;

CREATE TABLE IF NOT EXISTS lighthouse_metrics.audits (
  timestamp DateTime DEFAULT now(),
  url String,
  performance Float32,
  accessibility Float32,
  best_practices Float32,
  seo Float32,
  pwa Float32
) ENGINE = MergeTree()
ORDER BY timestamp;

-- –ò–Ω–¥–µ–∫—Å –¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ –ø–æ–∏—Å–∫–∞ –ø–æ URL
ALTER TABLE lighthouse_metrics.audits ADD INDEX url_index url TYPE minmax GRANULARITY 1;
